class HelloWorld {
    public static void main(String[] args) {
     System.out.println("right decrease pattern");
        
        int x=5;
        for (int i=1; i<=x;i++){
            for(int k=1;k<=i;k++){
                System.out.print(" ");
            }
            for(int j=x;j>=i;j--){
                System.out.print("*");
            }
             System.out.println();
        }
    
    }
    }
